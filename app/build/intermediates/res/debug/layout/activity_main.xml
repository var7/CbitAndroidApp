    <TextView
        android:id="@+id/selectbranch_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="Attendance"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/rollnumber_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:hint="Enter Roll No."
        android:inputType="number|text"
        android:layout_below="@id/selectbranch_text"
        android:layout_alignParentLeft="true" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/password_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:hint="Enter Password"
        android:inputType="textPassword"
        android:layout_below="@id/rollnumber_input"
        android:layout_alignParentLeft="true" />

    <CheckBox
        android:id="@+id/rememberme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="remember me"
        android:layout_below="@id/password_input"
        android:layout_alignParentLeft="true" />
    
    <Button
        android:id="@+id/button_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:layout_below="@id/rememberme"
        android:layout_alignParentLeft="true" />
	<View
	    android:id="@+id/line1"
    	android:layout_width="fill_parent"
    	android:layout_height="1dp"
    	android:layout_margin="5dp"
    	android:background="@android:color/darker_gray" 
        android:layout_below="@id/button_login"
        android:layout_alignParentLeft="true"
    	/>

	<TextView
        android:id="@+id/busroutes_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="Bus Routes"
        android:textAppearance="?android:attr/textAppearanceLarge" 
        android:layout_below="@id/line1"
        android:layout_alignParentLeft="true"/>
	<Button
        android:id="@+id/button_bustable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Route Table"
        android:layout_below="@id/busroutes_text"
        android:layout_alignParentLeft="true" />
